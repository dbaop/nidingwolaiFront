/* app.wxss - 全局样式文件 */

/* 重置样式 */
page, view, text, button, input, image, navigator, picker, radio, checkbox, label, textarea {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 全局颜色变量 */
:root {
  --primary-color: #FF6B8B;
  --secondary-color: #6B8BFF;
  --text-color: #333333;
  --text-light: #666666;
  --text-lighter: #999999;
  --bg-color: #f5f5f5;
  --white-color: #ffffff;
  --border-color: #e5e5e5;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #f5222d;
}

/* 通用样式 */
page {
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  color: var(--text-color);
  font-size: 28rpx;
  line-height: 1.5;
}

/* 常用布局类 */
.container {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  padding: 0 20rpx;
}

.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 文本样式 */
.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--secondary-color);
}

.text-light {
  color: var(--text-light);
}

.text-lighter {
  color: var(--text-lighter);
}

.text-center {
  text-align: center;
}

.text-bold {
  font-weight: 600;
}

/* 间距类 */
.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mt-30 {
  margin-top: 30rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mb-30 {
  margin-bottom: 30rpx;
}

.ml-10 {
  margin-left: 10rpx;
}

.ml-20 {
  margin-left: 20rpx;
}

.mr-10 {
  margin-right: 10rpx;
}

.mr-20 {
  margin-right: 20rpx;
}

/* 常用组件样式 */
/* 活动卡片通用样式 */
.activity-card {
  background-color: var(--white-color);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 按钮通用样式 */
.btn {
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1;
}

.btn-primary {
  background-color: var(--primary-color);
  color: var(--white-color);
}

.btn-default {
  background-color: var(--white-color);
  color: var(--text-color);
  border: 2rpx solid var(--border-color);
}

/* 输入框通用样式 */
.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 10rpx;
  font-size: 28rpx;
  background-color: var(--white-color);
}

.input:focus {
  border-color: var(--primary-color);
}

/* 标签通用样式 */
.tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag-primary {
  background-color: rgba(255, 107, 139, 0.1);
  color: var(--primary-color);
}

.tag-default {
  background-color: rgba(0, 0, 0, 0.05);
  color: var(--text-light);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text {
  margin-top: 20rpx;
  color: var(--text-lighter);
  font-size: 24rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  color: var(--text-lighter);
  font-size: 28rpx;
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--border-color);
}

/* 分割线 */
.divider {
  height: 20rpx;
  background-color: var(--bg-color);
}

.divider-line {
  height: 2rpx;
  background-color: var(--border-color);
  margin: 20rpx 0;
}
