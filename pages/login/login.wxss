/* login.wxss - 登录页面样式 */
.login-container {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  padding: 40rpx 40rpx 80rpx;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -50rpx;
  right: -50rpx;
  animation: float 6s ease-in-out infinite;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: 100rpx;
  left: -30rpx;
  animation: float 8s ease-in-out infinite reverse;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 200rpx;
  right: 50rpx;
  animation: float 10s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0rpx); }
  50% { transform: translateY(-20rpx); }
}

/* 标题区域 */
.login-header {
  text-align: center;
  margin-bottom: 80rpx;
  z-index: 1;
}

.app-logo {
  margin-bottom: 40rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 4rpx;
}

.login-title {
  margin-top: 20rpx;
}

.title-text {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.subtitle-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 登录表单 */
.login-form {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 60rpx 40rpx 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
  z-index: 1;
}

/* 输入框组 */
.input-group {
  position: relative;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s ease;
  overflow: hidden;
}

.input-group:focus-within {
  border-color: #FF6B8B;
  box-shadow: 0 0 0 6rpx rgba(255, 107, 139, 0.1);
  transform: translateY(-2rpx);
}

.input-icon {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-phone,
.icon-lock {
  font-size: 32rpx;
}

.input-field {
  flex: 1;
  height: 100rpx;
  font-size: 32rpx;
  color: #333333;
  background: transparent;
  padding: 0 20rpx;
}

.placeholder {
  color: #999999;
  font-size: 28rpx;
}

.input-clear {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-clear {
  font-size: 36rpx;
  color: #cccccc;
  font-weight: bold;
}

.password-toggle {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-eye {
  font-size: 32rpx;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  background: #cccccc;
  color: #999999;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0 30rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.login-btn.active {
  background: linear-gradient(135deg, #FF6B8B 0%, #FF8E53 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 139, 0.3);
}

.login-btn.active:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 30rpx rgba(255, 107, 139, 0.4);
}

.login-btn:disabled {
  background: #f0f0f0;
  color: #cccccc;
  transform: none;
  box-shadow: none;
}

.login-btn-hover {
  opacity: 0.9;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 12rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.forgot-text {
  font-size: 28rpx;
  color: #FF6B8B;
  text-decoration: none;
  padding: 10rpx 0;
}

.nav-link {
  font-size: 28rpx;
  color: #FF6B8B;
  text-decoration: none;
  padding: 10rpx 0;
  font-weight: 500;
}

.forgot-text:active,
.nav-link:active {
  opacity: 0.7;
}

/* 底部提示 */
.login-footer {
  margin-top: auto;
  z-index: 1;
}

.demo-tip {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.tip-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  text-align: center;
}

.account-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.account-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.account-item:last-child {
  border-bottom: none;
}

.account-label {
  font-size: 26rpx;
  color: #666666;
  min-width: 120rpx;
}

.account-value {
  font-size: 26rpx;
  color: #FF6B8B;
  font-weight: 500;
  flex: 1;
}