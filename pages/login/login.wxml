<!-- login.wxml - 登录页面模板 -->
<view class="login-container">
  <!-- 背景装饰 -->
  <view class="bg-decoration">
    <view class="bg-circle circle-1"></view>
    <view class="bg-circle circle-2"></view>
    <view class="bg-circle circle-3"></view>
  </view>

  <!-- 标题区域 -->
  <view class="login-header">
    <view class="app-logo">
      <image src="/images/logo.png" mode="aspectFit" wx:if="{{false}}"></image>
      <view class="logo-text">你定我来</view>
    </view>
    <view class="login-title">
      <text class="title-text">欢迎回来</text>
      <text class="subtitle-text">登录您的账号</text>
    </view>
  </view>

  <!-- 登录表单 -->
  <view class="login-form">
    <!-- 手机号输入框 -->
    <view class="input-group">
      <view class="input-icon">
        <text class="icon-phone">📱</text>
      </view>
      <input
        class="input-field"
        type="number"
        placeholder="请输入手机号"
        placeholder-class="placeholder"
        value="{{phone}}"
        bindinput="onPhoneInput"
        maxlength="11"
      />
      <view class="input-clear" wx:if="{{phone}}" bindtap="onClearPhone">
        <text class="icon-clear">×</text>
      </view>
    </view>

    <!-- 密码输入框 -->
    <view class="input-group">
      <view class="input-icon">
        <text class="icon-lock">🔒</text>
      </view>
      <input
        class="input-field"
        type="{{showPassword ? 'text' : 'password'}}"
        placeholder="请输入密码"
        placeholder-class="placeholder"
        value="{{password}}"
        bindinput="onPasswordInput"
        maxlength="20"
      />
      <view class="password-toggle" bindtap="togglePasswordVisibility">
        <text class="icon-eye">{{showPassword ? '🙈' : '👁️'}}</text>
      </view>
    </view>

    <!-- 登录按钮 -->
    <button
      class="login-btn {{canLogin && !isLoading ? 'active' : ''}}"
      disabled="{{!canLogin || isLoading}}"
      bindtap="login"
      hover-class="login-btn-hover"
    >
      <view wx:if="{{isLoading}}" class="loading-spinner"></view>
      {{isLoading ? '登录中...' : '登录'}}
    </button>

    <!-- 快捷操作 -->
    <view class="quick-actions">
      <text class="forgot-text" bindtap="onForgotPassword">忘记密码？</text>
      <navigator class="nav-link" url="/pages/register/register">注册账号</navigator>
    </view>
  </view>

  <!-- 底部提示 -->
  <view class="login-footer">
    <view class="demo-tip">
      <text class="tip-title">演示账号</text>
      <view class="account-list">
        <view class="account-item">
          <text class="account-label">管理员：</text>
          <text class="account-value">13621114638 / admin123456</text>
        </view>
        <view class="account-item">
          <text class="account-label">用户：</text>
          <text class="account-value">13800138000 / 123456</text>
        </view>
      </view>
    </view>
  </view>
</view>