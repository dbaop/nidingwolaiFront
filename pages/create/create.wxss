/* 创建活动页样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 表单部分 */
.form-section {
  margin-bottom: 30rpx;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  display: block;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #666666;
}

.radio-item radio {
  margin-right: 10rpx;
  transform: scale(1.2);
}

.radio-item text {
  vertical-align: middle;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #e0e0e0;
  box-sizing: border-box;
}

/* 选择器 */
.picker {
  width: 100%;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.picker-display {
  width: 100%;
  height: 80rpx;
  background-color: #ffffff;
  border: 2rpx solid #FF6B8B;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

/* 时间选择器样式 */
.time-picker-container {
  margin-bottom: 30rpx;
}

.time-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.time-picker-row {
  display: flex;
  gap: 0;
  border: 2rpx solid #FF6B8B;
  border-radius: 12rpx;
  overflow: hidden;
}

.time-picker-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  font-size: 36rpx;
  background-color: #FF6B8B;
  color: #ffffff;
  border-radius: 12rpx 0 0 12rpx;
}

.time-picker-row picker {
  flex: 1;
}

.time-picker-row picker:last-child .time-picker-display {
  border-radius: 0 12rpx 12rpx 0;
}

.time-picker-display {
  width: 100%;
  min-height: 80rpx;
  background-color: #ffffff;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  border: none;
}

.time-picker-display:active {
  background-color: #fff5f5;
}

/* 时间输入框样式 */
.time-input-wrapper {
  position: relative;
  width: 100%;
  height: 80rpx;
}

.time-input {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  cursor: pointer;
  z-index: 1;
}

.time-input-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #999999;
  background-color: #ffffff;
  border: 2rpx solid #FF6B8B;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.time-input-value {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333333;
  background-color: #ffffff;
  border: 2rpx solid #FF6B8B;
  border-radius: 12rpx;
  box-sizing: border-box;
}

/* 原生picker组件的样式 */
.time-picker-native {
  display: block;
  width: 100%;
  position: relative;
  z-index: 1;
}

/* 地点输入 */
.location-input {
  display: flex;
  gap: 10rpx;
  align-items: center;
}

.location-input .form-input {
  flex: 1;
}

.location-btn {
  width: 120rpx;
  height: 80rpx;
  background-color: #FF6B8B;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 10rpx;
  border: none;
  line-height: 80rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 人数控制 */
.people-count {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.count-row {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
}

.count-container {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  gap: 15rpx;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 15rpx;
  border: 1rpx solid #e0e0e0;
}

.count-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.count-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B8B;
}

.count-label {
  font-size: 28rpx;
  color: #666666;
}

.count-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

/* 进度条 */
.people-progress {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #FF6B8B;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666666;
  text-align: right;
}

/* 活动图片上传样式 */
.image-upload {
  display: flex;
  margin-top: 20rpx;
}

.image-preview {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.image-preview image {
  width: 100%;
  height: 100%;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
}

.image-placeholder-text {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
  padding: 0 20rpx;
}

.count-btn {
  width: 40rpx;
  height: 40rpx;
  background-color: #f8f8f8;
  color: #333333;
  font-size: 24rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
  line-height: 40rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.count-btn:disabled {
  background-color: #eeeeee;
  color: #cccccc;
}

.count-input {
  width: 120rpx;
  height: 60rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #e0e0e0;
  text-align: center;
  box-sizing: border-box;
}

.count-unit {
  font-size: 28rpx;
  color: #666666;
}

/* 标签选择 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 10rpx;
}

.tag-item {
  padding: 15rpx 25rpx;
  background-color: #f8f8f8;
  color: #666666;
  font-size: 26rpx;
  border-radius: 20rpx;
  border: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  cursor: pointer;
}

.tag-item.selected {
  background-color: #FF6B8B;
  color: #ffffff;
  border: 1rpx solid #FF6B8B;
}

/* 价格提示 */
.price-row {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.price-input {
  flex: 1;
}

.price-hint {
  display: block;
  font-size: 24rpx;
  color: #999999;
  white-space: nowrap;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  height: 180rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  resize: none;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 90rpx;
  background-color: #FF6B8B;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 20rpx;
  border: none;
  line-height: 90rpx;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:disabled {
  background-color: #FFB3C1;
  color: #ffffff;
}

/* 活动规则 */
.rule-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
}

.rule-label {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

.rule-switch {
  transform: scale(0.8);
}

.deposit-rules {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.small-input {
  width: 200rpx;
  flex: none;
}