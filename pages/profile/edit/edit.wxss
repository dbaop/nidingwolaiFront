/* edit.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头像部分 */
.avatar-section {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.avatar-container {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
}

.avatar-edit image {
  width: 30rpx;
  height: 30rpx;
  margin-bottom: 5rpx;
}

.avatar-edit text {
  font-size: 20rpx;
}

/* 表单部分 */
.form-section {
  background-color: #fff;
  padding: 0 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.form-input {
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #fafafa;
}

.form-textarea {
  width: 100%;
  height: 150rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 性别选择 */
.radio-group {
  display: flex;
  flex-direction: row;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.radio-item text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

/* 日期选择器 */
.picker-view {
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #fafafa;
  display: flex;
  align-items: center;
}

/* 按钮部分 */
.button-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.reset-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #f0f0f0;
  color: #666;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.save-btn {
  flex: 2;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #e0e0e0;
  color: #999;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.save-btn.active {
  background-color: #FF6B8B;
  color: #fff;
}