/* profile.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  min-height: 200rpx;
}

.avatar-container {
  position: relative;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  object-fit: cover;
  border: 4rpx solid #f86b5f;
  background-color: #f5f5f5;
}

/* 未登录状态时的头像样式 */
.user-card.not-logged-in .avatar {
  border-color: #cccccc;
  opacity: 0.7;
}

.user-card.not-logged-in .avatar-overlay {
  background-color: rgba(0, 0, 0, 0.2);
}

.user-card.logged-in .avatar {
  border-color: #f86b5f;
  opacity: 1;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  font-size: 60rpx;
  color: #ffffff;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-left: 10rpx; /* 添加左边距来调整整体对齐 */
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx; /* 增加间距，与下方内容有更好的分隔 */
}

.user-stats {
  display: flex;
  height: 140rpx; /* 与login-prompt高度保持一致 */
  align-items: center;
  justify-content: space-around; /* 确保统计项分布均匀 */
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #f86b5f;
  margin-bottom: 5rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666666;
}

/* 登录提示区域 */
.login-prompt {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start; /* 改为左对齐 */
  height: 140rpx; /* 与user-stats高度保持一致 */
  padding: 0;
  gap: 20rpx; /* 使用gap来控制间距，确保垂直对齐 */
  padding-left: 20rpx; /* 添加左边距，与统计项对齐 */
}

.prompt-text {
  font-size: 28rpx;
  color: #999999;
  text-align: left; /* 改为左对齐 */
  line-height: 1.4;
  margin: 0; /* 移除margin，使用gap控制间距 */
  flex-shrink: 0; /* 防止文本被压缩 */
}

.login-btn-prompt {
  background: linear-gradient(135deg, #FF6B8B 0%, #FF8E53 100%);
  color: #ffffff;
  border-radius: 25rpx;
  height: 70rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 139, 0.3);
  transition: all 0.3s ease;
  min-width: 200rpx;
  margin: 0; /* 移除margin，使用gap控制间距 */
  flex-shrink: 0; /* 防止按钮被压缩 */
}

.login-btn-prompt:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(255, 107, 139, 0.3);
}

.login-btn-prompt .btn-text {
  margin-right: 8rpx;
}

.login-btn-prompt .btn-arrow {
  font-size: 24rpx;
  font-weight: bold;
}

.login-btn-prompt::after {
  border: none;
}

.edit-btn {
  background-color: #f5f5f5;
  color: #666666;
  border-radius: 20rpx;
  padding: 0 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-btn image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

/* 未登录时的空白区域，保持布局对齐 */
.empty-space {
  width: 120rpx;
  height: 60rpx;
}

/* 功能菜单 */
.menu-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon image {
  width: 40rpx;
  height: 40rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.menu-arrow {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.5;
}

/* 退出登录按钮 */
.logout-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0;
  font-size: 32rpx;
  border-radius: 16rpx;
  background-color: #ffffff;
  color: #f86b5f;
  border: 2rpx solid #f86b5f;
  margin-top: 20rpx;
}

.logout-btn::after {
  border: none;
}