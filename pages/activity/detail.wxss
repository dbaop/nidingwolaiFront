/* detail.wxss */
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding: 20rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 32rpx;
  color: #999;
}

.activity-detail {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.activity-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  line-height: 1.4;
}

.activity-info {
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.info-label {
  color: #666;
  width: 160rpx;
}

.info-value {
  color: #333;
  flex: 1;
  word-break: break-word;
}

.activity-description, .activity-rules {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.description-content, .rules-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  word-break: break-word;
}

.activity-image {
  margin-bottom: 40rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.activity-image image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
}

.action-buttons {
  margin-bottom: 30rpx;
}

.status-button {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.pending {
  color: #ff9800;
}

.approved {
  color: #4caf50;
}

.rejected {
  color: #f44336;
}

.attended {
  color: #2196f3;
}

.canceled {
  color: #9e9e9e;
}

button {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
  margin: 0;
}

.back-button button {
  background-color: #e0e0e0;
  color: #333;
}
