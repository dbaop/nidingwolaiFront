/* 首页样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
  padding: 0 80rpx 0 40rpx;
  font-size: 32rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

/* 活动分类 */
.category-section {
  margin-bottom: 30rpx;
}

.category-scroll {
  white-space: nowrap;
  padding-bottom: 20rpx;
}

.category-item {
  display: inline-block;
  width: 120rpx;
  text-align: center;
  margin-right: 40rpx;
  padding: 20rpx 0;
}

.category-item.active {
  color: #FF6B8B;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
  background-color: #ffffff;
  padding: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.category-text {
  display: block;
  font-size: 28rpx;
  margin-top: 10rpx;
}

/* 活动列表 */
.activity-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.more-text {
  font-size: 28rpx;
  color: #FF6B8B;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.activity-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.activity-info {
  padding: 20rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  margin-right: 20rpx;
}

.activity-price {
  font-size: 28rpx;
  color: #FF6B8B;
  font-weight: bold;
}

.activity-meta {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.meta-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.meta-text {
  font-size: 26rpx;
  color: #666666;
}

.activity-participants {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 15rpx 0;
}

.participants-text {
  font-size: 26rpx;
  color: #666666;
}

.participants-avatars {
  display: flex;
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  border: 2rpx solid #ffffff;
}

.activity-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 15rpx;
}

.tag {
  font-size: 24rpx;
  color: #FF6B8B;
  background-color: #FFF0F3;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 107, 139, 0.2);
  border-top: 4rpx solid #FF6B8B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-container text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-container image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.error-container text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.retry-btn {
  background-color: #FF6B8B;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}