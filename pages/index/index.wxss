/* 首页样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
  padding: 0 80rpx 0 40rpx;
  font-size: 32rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

/* 活动分类 */
.category-section {
  margin-bottom: 30rpx;
}

.category-scroll {
  white-space: nowrap;
  padding-bottom: 20rpx;
}

.category-item {
  display: inline-block;
  width: 120rpx;
  text-align: center;
  margin-right: 40rpx;
  padding: 20rpx 0;
}

.category-item.active {
  color: #FF6B8B;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
  background-color: #ffffff;
  padding: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.category-text {
  display: block;
  font-size: 28rpx;
  margin-top: 10rpx;
}

/* 活动列表 */
.activity-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.more-text {
  font-size: 28rpx;
  color: #FF6B8B;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.activity-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.activity-info {
  padding: 20rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  margin-right: 20rpx;
}

.activity-price {
  font-size: 28rpx;
  color: #FF6B8B;
  font-weight: bold;
}

.activity-meta {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.meta-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.meta-text {
  font-size: 26rpx;
  color: #666666;
}

.activity-participants {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 15rpx 0;
}

.participants-text {
  font-size: 26rpx;
  color: #666666;
}

.participants-avatars {
  display: flex;
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  border: 2rpx solid #ffffff;
}

.activity-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  flex: 1;
}

.tag {
  font-size: 24rpx;
  color: #FF6B8B;
  background-color: #FFF0F3;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
}

.activity-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 15rpx;
  gap: 15rpx;
}

/* 申请加入按钮 */
.join-btn {
  background: linear-gradient(135deg, #FF6B8B 0%, #FF8E53 100%);
  color: #ffffff;
  border: none;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  height: auto;
  line-height: 1.5;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 139, 0.3);
  flex-shrink: 0;
  min-width: auto !important;
  width: auto !important;
}

.join-btn.enrolled {
  background-color: #e0e0e0;
  color: #999999;
  box-shadow: none;
}

.join-status {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.join-status .status-approved {
  background-color: #52c41a;
  color: #ffffff;
}

.join-status .status-pending {
  background-color: #faad14;
  color: #ffffff;
}

.join-status .status-rejected {
  background-color: #ff4d4f;
  color: #ffffff;
}

.join-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(255, 107, 139, 0.3);
}

.join-btn::after {
  border: none;
}

/* 报名对话框样式 */
.join-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  position: relative;
  width: 85%;
  max-height: 80vh;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
  display: flex;
  flex-direction: column;
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.close-icon {
  font-size: 48rpx;
  color: #999999;
  font-weight: 300;
  line-height: 1;
  cursor: pointer;
  padding: 5rpx;
}

.modal-body {
  padding: 30rpx;
  overflow-y: auto;
  flex: 1;
}

.activity-detail {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.detail-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 15rpx;
}

.detail-row {
  display: flex;
  margin-bottom: 10rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #666666;
  min-width: 150rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333333;
  flex: 1;
}

.deposit-info {
  margin-bottom: 20rpx;
}

.deposit-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.deposit-label {
  font-size: 28rpx;
  color: #666666;
}

.deposit-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B8B;
}

.deposit-tips {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 15rpx;
  background-color: #FFF7ED;
  border-radius: 8rpx;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #E65100;
}

.refund-rule {
  padding: 15rpx;
  background-color: #F3F4F6;
  border-radius: 8rpx;
}

.rule-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.rule-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
}

.message-input {
  margin-top: 20rpx;
}

.message-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx 30rpx;
  border-top: 2rpx solid #f5f5f5;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666666;
}

.confirm-btn {
  background: linear-gradient(135deg, #FF6B8B 0%, #FF8E53 100%);
  color: #ffffff;
}

.cancel-btn::after,
.confirm-btn::after {
  border: none;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 107, 139, 0.2);
  border-top: 4rpx solid #FF6B8B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-container text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-container image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.error-container text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.retry-btn {
  background-color: #FF6B8B;
  color: #fff;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
  border: none;
  font-size: 28rpx;
}

/* 空数据状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #999;
}