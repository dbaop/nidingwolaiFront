<!-- 简化版首页 - 用于调试 -->
<view>
  <view style="background: red; color: white; padding: 20px; margin: 10px;">
    <text style="font-size: 20px;">=== 调试信息 ===</text>
    <view>loading: {{loading}}</view>
    <view>error: {{error || 'null'}}</view>
    <view>activities.length: {{activities.length}}</view>
  </view>

  <view wx:for="{{activities}}" wx:key="id" style="background: yellow; margin: 10px; padding: 10px;">
    <view style="color: black; font-size: 16px;">{{item.title}}</view>
    <view>¥{{item.price}}/人</view>
  </view>
</view>
