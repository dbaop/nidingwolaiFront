/* time-picker.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  text-align: center;
}

.picker-container {
  margin-bottom: 60rpx;
}

.picker-display {
  width: 100%;
  height: 80rpx;
  background-color: #ffffff;
  border: 2rpx solid #FF6B8B;
  border-radius: 12rpx;
  color: #333333;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  cursor: pointer;
}

.button-container {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.cancel-btn {
  flex: 1;
  height: 80rpx;
  background-color: #ffffff;
  color: #333333;
  font-size: 30rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  box-sizing: border-box;
}

.confirm-btn {
  flex: 1;
  height: 80rpx;
  background-color: #FF6B8B;
  color: #ffffff;
  font-size: 30rpx;
  border-radius: 12rpx;
  border: none;
  box-sizing: border-box;
}
