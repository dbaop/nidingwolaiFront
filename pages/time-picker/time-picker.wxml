<!-- time-picker.wxml -->
<view class="container">
  <view class="header">
    <text class="title">{{type === 'start' ? '选择开始时间' : '选择结束时间'}}</text>
  </view>
  
  <view class="picker-container">
    <picker mode="datetime" bindchange="onTimeChange" value="{{dateTime}}" start="{{minEndTime}}">
      <view class="picker-display">
        {{dateTime}}
      </view>
    </picker>
  </view>
  
  <view class="button-container">
    <button class="cancel-btn" bindtap="onCancel">取消</button>
    <button class="confirm-btn" bindtap="onConfirm">确认</button>
  </view>
</view>
